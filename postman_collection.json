{
	"info": {
		"name": "Rapido Ride-Sharing API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://127.0.0.1:8000/api/users/register/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "users", "register"]
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"testpass123\",\n    \"email\": \"test@example.com\",\n    \"first_name\": \"Test\",\n    \"last_name\": \"User\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						}
					}
				},
				{
					"name": "Get Auth Token",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://127.0.0.1:8000/api-token-auth/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api-token-auth"]
						},
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"testpass123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						}
					}
				}
			]
		},
		{
			"name": "User Profile",
			"item": [
				{
					"name": "Get User Profile",
					"request": {
						"method": "GET",
						"url": {
							"raw": "http://127.0.0.1:8000/api/profiles/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "profiles"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						]
					}
				},
				{
					"name": "Toggle Driver Status",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://127.0.0.1:8000/api/profiles/toggle_driver_status/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "profiles", "toggle_driver_status"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						]
					}
				},
				{
					"name": "Update Location",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://127.0.0.1:8000/api/profiles/update_location/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "profiles", "update_location"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"latitude\": 12.9716,\n    \"longitude\": 77.5946,\n    \"address\": \"Current Location\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						}
					}
				}
			]
		},
		{
			"name": "Rides",
			"item": [
				{
					"name": "Create Ride Request",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://127.0.0.1:8000/api/rides/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "rides"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"pickup_location\": {\n        \"latitude\": 12.9716,\n        \"longitude\": 77.5946,\n        \"address\": \"Pickup Location\"\n    },\n    \"dropoff_location\": {\n        \"latitude\": 13.0827,\n        \"longitude\": 77.5090,\n        \"address\": \"Dropoff Location\"\n    }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						}
					}
				},
				{
					"name": "Get Available Rides",
					"request": {
						"method": "GET",
						"url": {
							"raw": "http://127.0.0.1:8000/api/rides/available_rides/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "rides", "available_rides"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						]
					}
				},
				{
					"name": "Accept Ride",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://127.0.0.1:8000/api/rides/{{ride_id}}/accept_ride/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "rides", "{{ride_id}}", "accept_ride"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						]
					}
				},
				{
					"name": "Start Ride",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://127.0.0.1:8000/api/rides/{{ride_id}}/start_ride/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "rides", "{{ride_id}}", "start_ride"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						]
					}
				},
				{
					"name": "Complete Ride",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://127.0.0.1:8000/api/rides/{{ride_id}}/complete_ride/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "rides", "{{ride_id}}", "complete_ride"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						]
					}
				},
				{
					"name": "Cancel Ride",
					"request": {
						"method": "POST",
						"url": {
							"raw": "http://127.0.0.1:8000/api/rides/{{ride_id}}/cancel_ride/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "rides", "{{ride_id}}", "cancel_ride"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						]
					}
				},
				{
					"name": "Get Ride Details",
					"request": {
						"method": "GET",
						"url": {
							"raw": "http://127.0.0.1:8000/api/rides/{{ride_id}}/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "rides", "{{ride_id}}"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						]
					}
				},
				{
					"name": "List All Rides",
					"request": {
						"method": "GET",
						"url": {
							"raw": "http://127.0.0.1:8000/api/rides/",
							"host": ["127.0.0.1"],
							"port": "8000",
							"path": ["api", "rides"]
						},
						"header": [
							{
								"key": "Authorization",
								"value": "Token {{auth_token}}"
							}
						]
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "auth_token",
			"value": "your_auth_token_here"
		},
		{
			"key": "ride_id",
			"value": "1"
		}
	]
}
